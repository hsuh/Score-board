<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render "layouts/stylesheets" %>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header>
      <%logo = image_tag("Logo.png", :alt => "Score board", :class => "round") %>
      <%= link_to logo, root_path %>
      <nav class="round">
        <ul>
          <%fb_logo = image_tag("facebook-logo.png", :alt => "Connect with Facebook") %>
          <li><%= link_to fb_logo, "#" %></li>
          <%twt_logo = image_tag("twitter.png", :alt => "Connect with Twitter") %>
           <li><%= link_to twt_logo, "#" %> </li>
        </ul>
      </nav>
    </header>
    <section class="round">
      <%= yield %>
    </section>
    <footer>
      <nav class="round">
        <ul>
          <li><%= link_to "About", about_path %></li>
          <li><%= link_to "Contact", contact_path %></li>
        </ul>
      </nav>
    </footer>
  </div>
</body>
</html>
